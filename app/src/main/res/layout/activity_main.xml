<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

<TextView
    android:id="@+id/instruction_langmodel_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/lngModel_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/langModelFree_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="radiobutton_free"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/langModelWeb_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="radiobutton_web"
            android:checked="true"/>

    </RadioGroup>

    <TextView
        android:id="@+id/instruction_numResults_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="instructions_numResults"/>

    <EditText
        android:id="@+id/numResult_editText"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_gravity="center_vertical">
        <requestFocus/>
    </EditText>

    <Button
        android:id="@+id/speech_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="speechbtn"/>

    <ListView
        android:id="@+id/nbest_listview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
